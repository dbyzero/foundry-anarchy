<h3>
  {{localize 'SRA.actor.monitors.conditionMonitors'}}
</h3>
<div class="flexrow flex-wrap">
  <div class="flexcol">
    <h4>{{localize 'SRA.actor.monitors.physical'}}</h4>
    {{> "systems/shadowrun-anarchy/templates/common/checkbar.hbs"
      code='physical'
      value=data.data.monitors.physical.value
      max=data.data.monitors.physical.max
      labelkey='SRA.actor.monitors.physical'
      rowlength=3
      adjust=true
      iconChecked=(iconFA 'fas fa-heartbeat')
      iconUnchecked=(iconFA 'far fa-heart')
    }}
  </div>
  <div class="flexcol">
    <h4>{{localize 'SRA.actor.monitors.stun'}}</h4>
    {{> "systems/shadowrun-anarchy/templates/common/checkbar.hbs"
      code='stun'
      value=data.data.monitors.stun.value
      max=data.data.monitors.stun.max
      labelkey='SRA.actor.monitors.stun'
      rowlength=3
      adjust=true
    }}
  </div>
</div>
