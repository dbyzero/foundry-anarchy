<div class="flexcol anarchy-monitor">
  <label class="flexrow">
    {{localize ANARCHY.actor.monitors.structure}}
    <input type="number" data-dtype="Number" maxlength="2"
      class="value" name="data.monitors.structure.max"
      value="{{data.data.monitors.structure.max}}" 
    />
  </label>
  {{> "systems/anarchy/templates/common/checkbar.hbs"
    code='structure'
    value=data.data.monitors.structure.value
    max=data.data.monitors.structure.max
    labelkey='ANARCHY.actor.monitors.structure'
    rowlength=6
    iconChecked=(iconFA 'fas fa-car-crash')
    iconUnchecked=(iconFA 'fas fa-car-alt')
  }}
</div>
