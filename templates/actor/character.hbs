<form class="{{options.cssClass}} character-sheet" autocomplete="off">
  <header class="sheet-header">
    <div class="passport-header">
      <div class="passport-img">
        <img class="anarchy-img profile-img" src="{{data.img}}" data-edit="img" title="{{data.name}}" />
      </div>
      <div class="passport-column">
        <div class="passport-details-row">
          <div class="passport-detail">
            <input class="info-value" name="name" type="text" value="{{data.name}}" placeholder="{{localize ANARCHY.actor.actorName}}"/>
          </div>
          <div class="passport-detail">
            {{> "systems/anarchy/templates/actor/character/metatype.hbs"}}
          </div>
          <div class="passport-detail">
            {{> "systems/anarchy/templates/actor/character/genre.hbs"}}
          </div>
          <div class="passport-detail">
            {{> "systems/anarchy/templates/actor/character/capacity.hbs"}}
          </div>
          <div class="passport-detail">
            {{> "systems/anarchy/templates/actor/character/karma.hbs"}}
          </div>
          <div class="passport-detail">
            {{> "systems/anarchy/templates/actor/character/essence.hbs"}}
          </div>
        </div>
        <div class=".passport-action-row">
          <div class="passport-action">
            {{> "systems/anarchy/templates/actor/parts/attributebuttons.hbs"}}
          </div>
          {{#if ownerActor}}
          <div class="passport-owner">
            {{> 'systems/anarchy/templates/actor/parts/ownership.hbs'}}
          </div>
          {{/if}}
        </div>
      </div>
    </div>
  </header>
  <section class="sheet-body">
    <div class="section-attributes anarchy-attributes">
      {{> "systems/anarchy/templates/actor/parts/attributes.hbs"}}
    </div>
    <div class="section-group anarchy-words-section">
      <div class="anarchy-words anarchy-keywords">
      {{> "systems/anarchy/templates/actor/parts/words.hbs" wordType='keywords' values=data.data.keywords}}
      </div>
      <div class="anarchy-words anarchy-cues">
      {{> "systems/anarchy/templates/actor/parts/words.hbs" wordType='cues' values=data.data.cues}}
      </div>
      <div class="anarchy-words anarchy-dispositions">
      {{> "systems/anarchy/templates/actor/parts/words.hbs" wordType='dispositions' values=data.data.dispositions}}
      </div>
    </div>
    <div class="section-group items-group">
    {{> "systems/anarchy/templates/actor/parts/skills.hbs"}}
    </div>
    <div class="section-group items-group">
    {{> "systems/anarchy/templates/actor/parts/shadowamps.hbs"}}
    </div>
    <div class="section-group items-group">
    {{> "systems/anarchy/templates/actor/parts/qualities.hbs"}}
    </div>
    <div class="section-group items-group">
    {{> "systems/anarchy/templates/actor/parts/weapons.hbs"}}
    </div>
    <div class="section-group">
      <div class="anarchy-block">
        {{> "systems/anarchy/templates/actor/monitors/armor.hbs"}}
      </div>
      <div class="anarchy-block flexrow flex-wrap">
        {{> "systems/anarchy/templates/actor/monitors/physical.hbs"}}
        {{> "systems/anarchy/templates/actor/monitors/stun.hbs"}}
      </div>
      <div class="anarchy-block flexcol">
        {{> "systems/anarchy/templates/actor/monitors/edge.hbs"}}
        {{> "systems/anarchy/templates/actor/monitors/anarchy.hbs"}}
      </div>
    </div>
    {{#if items.cyberdeck}}
      <div class="section-group items-group">
      {{> "systems/anarchy/templates/actor/parts/cyberdecks.hbs"}}
      </div>
    {{/if}}
    <div class="section-group">
      <div class="items-group third-width">
      {{> "systems/anarchy/templates/actor/parts/owned-actors.hbs"}}
      </div>
      <div class="items-group third-width">
      {{> "systems/anarchy/templates/actor/parts/gears.hbs"}}
      </div>
      <div class="items-group third-width">
      {{> "systems/anarchy/templates/actor/parts/contacts.hbs"}}
      </div>
    </div>

    <div class="anarchy-block">
      {{> 'systems/anarchy/templates/actor/parts/description.hbs'}}
      {{> 'systems/anarchy/templates/actor/parts/gmnotes.hbs'}}
    </div>
  </section>
</form>